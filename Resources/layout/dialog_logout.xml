<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/smallDialog_width"
    android:layout_height="@dimen/smallDialog_height"
    android:background="@drawable/background"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dialog_marginTop"
        android:layout_marginLeft="@dimen/dialog_marginLeft"
        android:layout_marginRight="@dimen/dialog_marginRight"
        android:text="@string/confirmLogout"
        android:textSize="@dimen/dialog_textSize"
        android:textColor="@color/textColor"
        android:layout_weight="1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_marginLeft"
        android:layout_marginRight="@dimen/dialog_marginRight"
        android:layout_marginBottom="@dimen/dialog_marginBottom">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_buttonMargin"
            android:text="@string/cancel"
            android:textColor="@color/clickable"
            android:textAllCaps="false"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dialog_buttonMargin"
            android:text="@string/confirm"
            android:textColor="@color/clickable"
            android:textAllCaps="false"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
</LinearLayout>
