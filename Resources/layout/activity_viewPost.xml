<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibtnLogo"
            android:layout_width="@dimen/logoWidth"
            android:layout_height="@dimen/logoHeight"
            android:background="@drawable/Logo"
            android:contentDescription="@string/logo"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/ibtnProfile"
            android:layout_width="@dimen/profilePictureWidth"
            android:layout_height="@dimen/profilePictureHeight"
            android:background="@drawable/profilepicture"
            android:contentDescription="@string/logo"
            android:layout_toRightOf="@id/ibtnLogo"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:contentDescription="@string/back"
            android:layout_toLeftOf="@id/ibtnLogo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ivCreatorPicture"
            android:layout_width="@dimen/ViewPost_profileWidth"
            android:layout_height="@dimen/ViewPost_profileHeight"
            android:background="@drawable/profilepicture"
            android:contentDescription="@string/profile"/>
        <TextView
            android:id="@+id/tvPostCreator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/clickable"
            android:layout_marginLeft="@dimen/ViewPost_MarginLeft"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvPostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textSize="@dimen/ViewPost_postNameTextSize"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight"/>
    <TextView
        android:id="@+id/tvPostDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight"/>
    <TextView
        android:id="@+id/tvSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clickable"
        android:text="@string/sortBy"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginTop="@dimen/Post_marginTop"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight">
        <ListView
            android:id="@+id/lvComments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </HorizontalScrollView>
    <Button
        android:id="@+id/btnNewComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CreateComment"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="@dimen/ViewPost_buttonTextSize"
        android:textColor="@color/clickable"
        android:background="@android:color/transparent"
        android:layout_marginBottom="@dimen/marginBottom"/>
</LinearLayout>
