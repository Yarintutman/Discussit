<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_closeHeight"
        android:layout_marginLeft="@dimen/dialog_marginLeft"
        android:layout_marginTop="@dimen/dialog_marginTop"
        android:layout_marginRight="@dimen/dialog_marginRight">
        <ImageButton
            android:id="@+id/ibtnCloseDialog"
            android:layout_width="@dimen/dialog_closeWidth"
            android:layout_height="@dimen/dialog_closeHeight"
            android:background="@drawable/close"
            android:contentDescription="@string/close"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMemberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_marginRight="@dimen/Member_marginRight"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/members"
                android:textColor="@color/textColor"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dialog_marginLeft"
        android:layout_marginRight="@dimen/dialog_marginRight">
        <EditText
            android:id="@+id/etSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/dialog_textSize"
            android:textColor="@color/textColor"
            android:hint="@string/MemberSearchHint"
            android:textColorHint="@color/hintColor"
            android:backgroundTint="@color/clickable"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:contentDescription="@string/search"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clickable"
        android:text="@string/sortBy"
        android:layout_marginLeft="@dimen/dialog_marginLeft"/>
    <ListView
        android:id="@+id/lvMembers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/dialog_marginLeft"
        android:layout_marginRight="@dimen/dialog_marginRight"
        android:layout_marginBottom="@dimen/dialog_marginBottom"/>
</LinearLayout>