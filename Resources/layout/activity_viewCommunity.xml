<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibtnLogo"
            android:layout_width="@dimen/logoWidth"
            android:layout_height="@dimen/logoHeight"
            android:background="@drawable/Logo"
            android:contentDescription="@string/logo"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/ibtnProfile"
            android:layout_width="@dimen/profilePictureWidth"
            android:layout_height="@dimen/profilePictureHeight"
            android:background="@drawable/profilepicture"
            android:contentDescription="@string/logo"
            android:layout_toRightOf="@id/ibtnLogo"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:contentDescription="@string/back"
            android:layout_toLeftOf="@id/ibtnLogo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnJoinCommunity"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ViewCommunity_btnHeight"
            android:textColor="@color/clickable"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:text="@string/JoinCommunity"
            android:paddingEnd="@dimen/marginRight"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/Community_marginTop"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight">
        <TextView
            android:id="@+id/tvCommunityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/Community_nameSize"
            android:textColor="@color/textColor"/>
        <TextView
            android:id="@+id/tvMemberCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ViewCommunity_memberMarginRight"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/members"
            android:layout_gravity="center_vertical"
            android:textColor="@color/textColor"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight"
        android:textColor="@color/textColor"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight">
        <EditText
            android:id="@+id/etSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/ViewCommunity_textSize"
            android:textColor="@color/textColor"
            android:hint="@string/PostSearchHint"
            android:textColorHint="@color/hintColor"
            android:backgroundTint="@color/clickable"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/ibtnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:contentDescription="@string/search"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clickable"
        android:text="@string/sortBy"
        android:layout_marginLeft="@dimen/marginLeft"/>
    <ListView
        android:id="@+id/lvPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight"/>
    <Button
        android:id="@+id/btnNewPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CreatePost"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="@dimen/ViewCommunity_textSize"
        android:textColor="@color/clickable"
        android:background="@drawable/shape"
        android:layout_marginBottom="@dimen/marginBottom"/>
</LinearLayout>
