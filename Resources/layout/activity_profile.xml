<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:layout_marginTop="@dimen/Profile_marginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibtnPicture"
            android:layout_width="@dimen/Profile_profileWidth"
            android:layout_height="@dimen/Profile_profileHeight"
            android:background="@drawable/profilepicture"
            android:layout_marginLeft="@dimen/marginLeft"
            android:layout_marginRight="@dimen/marginRight"
            android:contentDescription="@string/profile"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/ibtnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logout"
            android:contentDescription="@string/logout"
            android:layout_toRightOf="@id/ibtnPicture"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:contentDescription="@string/logout"
            android:layout_toLeftOf="@id/ibtnPicture"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:layout_marginTop="@dimen/Profile_marginTop"
        android:fontFamily="serif"
        android:textSize="@dimen/Profile_usernameSize"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/btnViewCommunities"
            android:layout_width="@dimen/Profile_btnWidth"
            android:layout_height="wrap_content"
            android:text="@string/viewCommunities"
            android:textAllCaps="false"
            android:textSize="@dimen/Profile_btnTextSize"
            android:textColor="@color/clickable"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/btnViewPosts"
            android:layout_width="@dimen/Profile_btnWidth"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Profile_marginTop"
            android:text="@string/viewPosts"
            android:textAllCaps="false"
            android:textSize="@dimen/Profile_btnTextSize"
            android:textColor="@color/clickable"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/btnViewComments"
            android:layout_width="@dimen/Profile_btnWidth"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Profile_marginTop"
            android:text="@string/viewComments"
            android:textAllCaps="false"
            android:textSize="@dimen/Profile_btnTextSize"
            android:textColor="@color/clickable"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/btnManageCommunities"
            android:layout_width="@dimen/Profile_btnWidth"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Profile_marginTop"
            android:text="@string/manageCommunities"
            android:textAllCaps="false"
            android:textSize="@dimen/Profile_btnTextSize"
            android:textColor="@color/clickable"
            android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="@dimen/Profile_btnWidth"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Profile_marginTop"
            android:text="@string/settings"
            android:textAllCaps="false"
            android:textSize="@dimen/Profile_btnTextSize"
            android:textColor="@color/clickable"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>