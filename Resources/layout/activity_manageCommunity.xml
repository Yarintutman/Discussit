<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_marginTop="@dimen/Settigns_marginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/ibtnLogo"
            android:layout_width="@dimen/logoWidth"
            android:layout_height="@dimen/logoHeight"
            android:background="@drawable/Logo"
            android:contentDescription="@string/logo"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/ibtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:contentDescription="@string/back"
            android:layout_toLeftOf="@id/ibtnLogo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/communityName"
            android:textColor="@color/textColor"
            android:textSize="@dimen/ManageCommunity_textSize"/>
        <EditText
            android:id="@+id/etCommunityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/enterCommunityName"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/clickable"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/communityDescription"
            android:textColor="@color/textColor"
            android:textSize="@dimen/ManageCommunity_textSize"/>
        <EditText
            android:id="@+id/etCommunityDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/entercommunityDescription"
            android:textColorHint="@color/hintColor"
            android:textColor="@color/textColor"
            android:backgroundTint="@color/clickable"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMemberCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor"
                android:layout_marginRight="@dimen/Member_marginRight"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/members"
                android:textColor="@color/textColor"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/ibtnClearSearchBar"
                android:layout_width="@dimen/clearSearchBarbuttonWidth"
                android:layout_height="@dimen/clearSearchBarbuttonHeight"
                android:background="@drawable/ClearSearch"
                android:contentDescription="@string/clearSearch"
                android:layout_gravity="center_vertical"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etSearchBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="@dimen/Hub_searchBarText"
                android:textColor="@color/textColor"
                android:hint="@string/MemberSearchHint"
                android:textColorHint="@color/hintColor"
                android:backgroundTint="@color/clickable"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/ibtnSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/search"
                android:contentDescription="@string/search"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
        android:id="@+id/tvSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clickable"
        android:text="@string/sortby"/>
        <ListView
            android:id="@+id/lvMembers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dialog_marginLeft"
            android:layout_marginRight="@dimen/dialog_marginRight"
            android:layout_marginBottom="@dimen/dialog_marginBottom"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnSaveChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textSize="@dimen/ManageCommunity_buttonTextSize"
        android:textColor="@color/clickable"
        android:background="@drawable/shape"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/marginBottom"/>
</LinearLayout>
