<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Hublogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/Logo"
            android:contentDescription="@string/logo"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profilepicture"
            android:contentDescription="@string/logo"
            android:layout_toRightOf="@id/Hublogo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/Hub_marginLeft"
        android:layout_marginRight="@dimen/Hub_marginRight">
        <EditText
            android:id="@+id/etCommunitySearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/Hub_searchBarText"
            android:textColor="@color/textColor"
            android:hint="@string/SearchHint"
            android:textColorHint="@color/clickable"
            android:fadeScrollbars="false"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btnCommunitySearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:contentDescription="@string/search"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/Hub_marginLeft"
        android:layout_marginRight="@dimen/Hub_marginRight"/>
    <Button
        android:id="@+id/btnNewCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CreateCommunity"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="@dimen/Hub_newCommunityText"
        android:textColor="@color/clickable"
        android:backgroundTint="@android:color/transparent"/>
</LinearLayout>