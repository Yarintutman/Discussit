<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivlogo"
            android:layout_width="@dimen/logoWidth"
            android:layout_height="@dimen/logoHeight"
            android:background="@drawable/Logo"
            android:contentDescription="@string/logo"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:id="@+id/ibtnProfile"
            android:layout_width="@dimen/profilePictureWidth"
            android:layout_height="@dimen/profilePictureHeight"
            android:background="@drawable/profilepicture"
            android:contentDescription="@string/logo"
            android:layout_toRightOf="@id/ivlogo"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight">
        <ImageButton
            android:id="@+id/ibtnClearSearchBar"
            android:layout_width="@dimen/clearSearchBarbuttonWidth"
            android:layout_height="@dimen/clearSearchBarbuttonHeight"
            android:background="@drawable/ClearSearch"
            android:contentDescription="@string/clearSearch"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/etSearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/Hub_searchBarText"
            android:textColor="@color/textColor"
            android:hint="@string/CommunitySearchHint"
            android:textColorHint="@color/hintColor"
            android:backgroundTint="@color/clickable"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/ibtnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search"
            android:contentDescription="@string/search"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvSortBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clickable"
        android:text="@string/sortby"
        android:layout_marginLeft="@dimen/marginLeft"/>
    <ListView
        android:id="@+id/lvCommunities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/marginLeft"
        android:layout_marginRight="@dimen/marginRight"/>
    <Button
        android:id="@+id/btnNewCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CreateCommunity"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="@dimen/Hub_newCommunityText"
        android:textColor="@color/clickable"
            android:background="@drawable/shape"
        android:layout_marginBottom="@dimen/marginBottom"/>
</LinearLayout>